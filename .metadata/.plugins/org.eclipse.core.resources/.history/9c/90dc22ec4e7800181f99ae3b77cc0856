#ifndef CIPCS_H_
#define CIPCS_H_
#define UP_TYPE         1
#define DOWN_TYPE       2
#define MSG_TYPE        5
#define PARA_TYPE       6
#define MANAGEMSG_TYPE  7
#define DEBUGMSG_TYPE   8
#include "includs.h"

class CIpcs {

public:
	CIpcs();
	virtual ~CIpcs();
	void myfun();
	typedef struct
	{
		unsigned char CharType;
		unsigned char CharNum;
		unsigned char Charsq;
		unsigned char CharCOT;
		unsigned char CharPA;
		//这里放信息元素
	}ASDU;
	typedef struct
	{
		const unsigned char CharStart = 0x68; //其实字符
		int IntLength;//报文长度
		int IntNS;//控制域的收计数器
		int IntNR;//控制域的发计数器
	}APDU;
	typedef struct _tagDATA_HEADER
	{
	    int IntMessgType; //消息类别
	    int IntChannelType;  //通道类别
	    int IntSourceIndex;  // 的大小
	    int IntMessageNo; // 消息队列号
	    unsigned char  CharMessageBuff[256];   // 起始地址
	    APDU apdu; //APDU信息
	}StructMessageBuff;
private:
	#define UP_TYPE         1
	#define DOWN_TYPE       2
	#define MSG_TYPE        5
	#define PARA_TYPE       6
	#define MANAGEMSG_TYPE  7
	#define DEBUGMSG_TYPE   8
	#define UP_PATH         "up_shm"
	#define DOWN_PATH       "down_shm"
	#define MSG_PATH        "msg_shm"
	#define PARA_PATH       "para_shm"
	#define MANAGEMSG_PATH  "managemsg_shm"
	#define DEBUGMSG_PATH   "debugmsg_shm"
	int ipcsid;
	int CreatShareMemory(int type,int memorylength,int creatflag);


};

#endif /* CIPCS_H_ */
