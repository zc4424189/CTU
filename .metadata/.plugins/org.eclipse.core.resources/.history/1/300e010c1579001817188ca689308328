#include <iostream>
using namespace std;
#include "../CIpcs.h"
#include "../TCPClient.h"
#include "../TcpClientManager.h"
#include "../includs.h"
int main() {
	class CIpcs ipcs;
	class CLogs log;
	ipcs.CreatShareMemory(UP_TYPE,1);
	ipcs.CreatShareMemory(DOWN_TYPE,1);
	cout << "这是测试信息111" << endl;
	class CTCPClientManager tmanger;
	tmanger.AddTCPClientObject("192.168.10.233",4991);
	tmanger.Start();
	tmanger.Open(0);
	while(true)
	{
		cout << "这还是测试信息" << endl;
		if(tmanger.GetTCPClientState(0)==0)
		{
			tmanger.Open(0);
		}
		sleep(1);
	}
	return 0;
}
