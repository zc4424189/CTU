int CIpcs::CreatShareMemory(int type,int creatflag)
{
	int shmid;
	int memorylength;
	key_t shm_key;
	char *SHM_PATH=NULL;
	memorylength=0;
	switch(type)
	{
		case UP_TYPE:
			SHM_PATH = UP_PATH;
			memorylength = sizeof(StructMessageBuff)*MAXBUFF;
			break;
		case DOWN_TYPE:
			SHM_PATH = DOWN_PATH;
<<<<<<< HEAD
			memorylength = sizeof(StructMessageBuff)*MAXBUFF;
=======
>>>>>>> origin/master
			break;
	}
	shm_key=ftok(SHM_PATH,1);
    if(shm_key==-1)
    {
    	log.LogMessage("创建shm_key出错"+shm_key,ERROR);
        return -1;
    }
    if(0==memorylength)
    {
    	return -1;
    }
    if(creatflag==1)
    {
    	shmid=shmget(shm_key,memorylength,PERMS|IPC_EXCL|IPC_CREAT);
    }
    else
    {
        shmid=shmget(shm_key,memorylength,PERMS);
    }

    if((shmid==-1)&&(errno!=EEXIST))
    {
        log.LogMessage("创建共享内存出错"+errno,ERROR);
        return -1;
    }
    return shmid;
}
