int CIpcs::CreatShareMemory(int type,int memorylength,int creatflag)
{

	int shmid;
	key_t shm_key;
	int iErrCode;
	if(Bool_Created)
	{
		return -1;
	}
	char *SHM_PATH=NULL;
	switch(type)
	{
		case UP_TYPE:
			SHM_PATH = UP_PATH;

			break;
		case DOWN_TYPE:
			break;
	}
	shm_key=ftok(SHM_PATH,1);
    if(shm_key==-1)
    {
    	log.LogMessage();
        return -1;
    }
	return -1;
}
